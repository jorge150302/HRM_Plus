@model HRM_Plus.Models.Departamento

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NombrePuesto" class="control-label"></label>
                <input asp-for="NombrePuesto" class="form-control" />
                <span asp-validation-for="NombrePuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionPuesto" class="control-label"></label>
                <input asp-for="DescripcionPuesto" class="form-control" />
                <span asp-validation-for="DescripcionPuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UbicacionFisica" class="control-label"></label>
                <input asp-for="UbicacionFisica" class="form-control" />
                <span asp-validation-for="UbicacionFisica" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isActivo" /> Activo
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
